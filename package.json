{
  "name": "plantsim-assistant",
  "displayName": "PlantSim-assistant",
  "description": "Assisting in development of modeling by simtalk at PlantSimulation",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.79.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "plantsim-assistant.updateReloadMethod",
        "title": "Build"
      },
      {
        "command": "plantsim-assistant.executeReload",
        "title": "Deploy"
      },
      {
        "command": "plantsim-assistant.updateMethods",
        "title": "Build & Deploy"
      },
      {
        "command": "plantsim-assistant.createProject",
        "title": "Init"
      }
    ],
    "languages": [
      {
        "id": "simtalkv2",
        "aliases": [
          "simtalkv2",
          "simtalkv2"
        ],
        "extensions": [
          ".simtalk"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "simtalkv2",
        "scopeName": "source.simtalk",
        "path": "./syntaxes/simtalkv2.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "simtalkv2",
        "scopeName": "source.simtalk",
        "path": "./snippets/simtalkv2.snippet.json"
      }
    ],
    "configuration": {
        "title": "PlantSimAssistant",
        "properties": {
            "psimAssistant.psimPath": {
                "type": "string",
                "scope": "window",
                "default": "C:\\Program Files\\Siemens\\Tecnomatix Plant Simulation 2201\\PlantSimulation.exe",
                "description": "Execute file path of the PlantSimulation."
            },
            "psimAssistant.port": {
                "type": "integer",
                "scope": "window",
                "default": 30001,
                "description": "Port number for server mode of the PlantSimulation."
            },
            "psimAssistant.modelPath": {
                "type": "string",
                "scope": "window",
                "description": "Model file path(.spp) for target by project."
            }
        }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run webpack",
    "webpack": "webpack --mode production",
    "webpack-dev": "webpack --mode development",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.79.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.3",
    "webpack": "^5.88.1",
    "webpack-cli": "^5.1.4"
  }
}
